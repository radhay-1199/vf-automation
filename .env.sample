# Debug mode (set to False in production)
DEBUG=True

# Django secret key (generate a secure key for production)
SECRET_KEY=django-insecure-change-this-in-production-environment

# Database configuration
POSTGRES_DB=flightdb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgres://postgres:postgres@db:5432/flightdb

# For local development with Docker database
# DATABASE_URL=postgres://postgres:postgres@localhost:5432/flightdb

# API timeout in milliseconds
API_TIMEOUT_MS=15000

# Static files
STATIC_URL=/static/
STATIC_ROOT=/app/staticfiles

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1 